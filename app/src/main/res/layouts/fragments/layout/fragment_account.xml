<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".presentation.account.AccountFragment">

        <Button
            android:id="@+id/buttonChangeUserData"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/edit_data"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonExit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNickname" />

        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewLogin"
            app:layout_constraintEnd_toEndOf="@+id/buttonChangeUserData"
            app:layout_constraintStart_toStartOf="@+id/buttonChangeUserData"
            app:layout_constraintTop_toBottomOf="@+id/textViewBanMessage"
            tools:text="Почта" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewNickname"
            app:layout_constraintEnd_toEndOf="@+id/textViewEmail"
            app:layout_constraintStart_toStartOf="@+id/textViewEmail"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail"
            tools:text="Логин" />

        <Button
            android:id="@+id/buttonExit"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/exit"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonPersonalCollections"
            app:layout_constraintEnd_toEndOf="@+id/buttonChangeUserData"
            app:layout_constraintStart_toStartOf="@+id/buttonChangeUserData"
            app:layout_constraintTop_toBottomOf="@+id/buttonChangeUserData" />

        <Button
            android:id="@+id/buttonPersonalCollections"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/collections_personal"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonBannedUsers"
            app:layout_constraintEnd_toEndOf="@+id/buttonExit"
            app:layout_constraintStart_toStartOf="@+id/buttonExit"
            app:layout_constraintTop_toBottomOf="@+id/buttonExit" />

        <TextView
            android:id="@+id/textViewNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonChangeUserData"
            app:layout_constraintEnd_toEndOf="@+id/textViewLogin"
            app:layout_constraintStart_toStartOf="@+id/textViewLogin"
            app:layout_constraintTop_toBottomOf="@+id/textViewLogin"
            tools:text="Отображаемое имя" />

        <Button
            android:id="@+id/buttonBannedUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="@string/users_banned"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/buttonPersonalCollections"
            app:layout_constraintStart_toStartOf="@+id/buttonPersonalCollections"
            app:layout_constraintTop_toBottomOf="@+id/buttonPersonalCollections" />

        <TextView
            android:id="@+id/textViewBanMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:textColor="#FF5E5E"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/textViewEmail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>