<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="ru.mirea.moviestash.entites.SiteUser" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".user_management.AccountFragment">

            <Button
                android:id="@+id/changeUserData"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:text="Изменить данные"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/exitButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{`Почта: ` + user.email}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toEndOf="@+id/changeUserData"
                app:layout_constraintStart_toStartOf="@+id/changeUserData"
                app:layout_constraintTop_toBottomOf="@+id/banMessage"
                tools:text="Почта" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{`Логин: ` + user.login}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/textView15"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                tools:text="Логин" />

            <Button
                android:id="@+id/exitButton"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:text="Выйти"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/myCols"
                app:layout_constraintEnd_toEndOf="@+id/changeUserData"
                app:layout_constraintStart_toStartOf="@+id/changeUserData"
                app:layout_constraintTop_toBottomOf="@+id/changeUserData" />

            <Button
                android:id="@+id/myCols"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/button_color"
                android:text="Мои коллекции"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/bannedUsers"
                app:layout_constraintEnd_toEndOf="@+id/exitButton"
                app:layout_constraintStart_toStartOf="@+id/exitButton"
                app:layout_constraintTop_toBottomOf="@+id/exitButton" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@{`Отображаемое имя: ` + user.nickname}"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/changeUserData"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                tools:text="Отображаемое имя" />

            <Button
                android:id="@+id/bannedUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                android:backgroundTint="@color/button_color"
                android:text="Пользователи в бане"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/myCols"
                app:layout_constraintStart_toStartOf="@+id/myCols"
                app:layout_constraintTop_toBottomOf="@+id/myCols" />

            <TextView
                android:id="@+id/banMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:textColor="#FF5E5E"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>