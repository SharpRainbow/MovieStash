<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account_holder_nav"
    app:startDestination="@id/fragment_login">
    <fragment
        android:id="@+id/fragment_account"
        android:name="ru.mirea.moviestash.presentation.account.AccountFragment"
        android:label="Account" >
        <action
            android:id="@+id/action_fragment_account_to_fragment_login"
            app:destination="@id/fragment_login"
            app:popUpTo="@id/fragment_account"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_login"
        android:name="ru.mirea.moviestash.presentation.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_fragment_login_to_fragment_account"
            app:destination="@id/fragment_account"
            app:launchSingleTop="true"
            app:popUpTo="@id/fragment_login"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>