<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.celebrity_list.CelebrityListFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_celebrity_list"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="1dp">

        <TextView
            android:id="@+id/text_view_celebrity_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/progress_bar_celebrity_list"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_celebrity_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/RecyclerViewPadding"
        android:paddingBottom="50dp"
        tools:listitem="@layout/item_person" />

</LinearLayout>