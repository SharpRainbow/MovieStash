<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.celebrity.CelebrityFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_celebrity_screen"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        app:layout_scrollFlags="scroll" />

    <ScrollView
        android:id="@+id/scroll_view_celebrity_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_celebrity_image"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/image_view_celebrity_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text_view_celebrity_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:text="Celebrity Name"

                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card_view_celebrity_image"
                app:layout_constraintTop_toTopOf="@+id/card_view_celebrity_image" />

            <TextView
                android:id="@+id/text_view_celebrity_career"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_celebrity_name"
                app:layout_constraintTop_toBottomOf="@+id/text_view_celebrity_name"
                tools:text="profession" />

            <TextView
                android:id="@+id/text_view_celebrity_life_dates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_celebrity_name"
                app:layout_constraintTop_toBottomOf="@+id/text_view_celebrity_career"
                tools:text="dates of live" />

            <TextView
                android:id="@+id/text_view_celebrity_birthplace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="50dp"
                android:gravity="start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_celebrity_name"
                app:layout_constraintTop_toBottomOf="@+id/text_view_celebrity_life_dates"
                tools:text="place of birth" />

            <TextView
                android:id="@+id/text_view_celebrity_height"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:gravity="start"
                app:layout_constraintBottom_toTopOf="@+id/text_view_celebrity_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/text_view_celebrity_name"
                app:layout_constraintTop_toBottomOf="@+id/text_view_celebrity_birthplace"
                app:layout_constraintVertical_bias="0.0"
                tools:text="params" />

            <TextView
                android:id="@+id/text_view_celebrity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/filmography"

                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/card_view_celebrity_image"
                app:layout_constraintTop_toBottomOf="@+id/card_view_celebrity_image" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_celebrity_content"
                style="@style/RecyclerViewPadding"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_celebrity_content">

            </androidx.recyclerview.widget.RecyclerView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>